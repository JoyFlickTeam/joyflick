<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:id="@+id/chContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivChUserPicture"
        android:layout_width="256px"
        android:layout_height="256px"
        tools:layout_editor_absoluteX="18dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvChUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        tools:text="UserName"
        android:layout_toRightOf="@id/ivChUserPicture" />

    <TextView
        android:id="@+id/tvChUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:maxLines="2"
        tools:text="This is a preview of the last message sent"
        android:layout_below="@id/tvChUserName"
        android:layout_toRightOf="@id/ivChUserPicture" />

</RelativeLayout>