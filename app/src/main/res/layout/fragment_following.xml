<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131D3E"
    tools:context=".fragments.FollowingFragment">

    <TextView
        android:id="@+id/tvNoFollowing"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="There are currently no reviews to show.\n\n Try following users to see their reviews here." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFollowingReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp" />

</RelativeLayout>