<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#131D3E"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/idSearchUsers"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/light_background"
        android:inputType="text"
        android:queryHint="Search Games" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/UsersListResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idUserText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/idUserText"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/idSearchUsers"
        android:layout_marginTop="2dp"
        android:background="@color/nav_color"
        android:text="Users"
        android:textAlignment="inherit"
        android:textColor="@color/black"
        app:autoSizeTextType="uniform" />


</RelativeLayout>