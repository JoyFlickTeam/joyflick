<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#131D3E"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCommentsTopProfileImage"
        android:layout_width="256px"
        android:layout_height="256px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCommentsTopProfileName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ivCommentsTopProfileImage"
        android:maxLines="2"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="UserName" />

    <ImageView
        android:id="@+id/ivCommentsTopGameImage"
        android:layout_width="128px"
        android:layout_height="128px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tvCommentsTopProfileName"
        android:layout_toRightOf="@id/ivCommentsTopProfileImage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCommentsTopGameName"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCommentsTopProfileName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivCommentsTopGameImage"
        android:maxLines="2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:text="Game name" />

    <TextView
        android:id="@+id/tvCommentsTopReview"
        android:layout_width="400dp"
        android:layout_height="88dp"
        android:layout_below="@id/ivCommentsTopProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:background="@color/nav_color"
        android:gravity="top"
        android:maxLines="4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:text="Wow this game was not good!" />

    <TextView
        android:id="@+id/tvNoComments"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="30sp"
        android:visibility="invisible"
        android:text="There are no comments for this review.\n Be the first to add one!"
        android:layout_below="@id/tvCommentsTopReview"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvCommentsTopReview" />

</RelativeLayout>